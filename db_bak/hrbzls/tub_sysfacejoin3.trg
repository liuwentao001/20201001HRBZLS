CREATE OR REPLACE TRIGGER HRBZLS."TUB_SYSFACEJOIN3" BEFORE UPDATE
OF AFJPID,
   AFJCID
ON SYSFACEJOIN3 FOR EACH ROW
DECLARE
    INTEGRITY_ERROR  EXCEPTION;
    ERRNO            INTEGER;
    ERRMSG           CHAR(200);
    DUMMY            INTEGER;
    FOUND            BOOLEAN;
    SEQ NUMBER;
    --  DECLARATION OF UPDATECHILDPARENTEXIST CONSTRAINT FOR THE PARENT "SYSFACELIST2"
    CURSOR CPK1_SYSFACEJOIN3(VAR_AFJPID VARCHAR) IS
       SELECT 1
       FROM   SYSFACELIST2
       WHERE  SFLID = VAR_AFJPID
        AND   VAR_AFJPID IS NOT NULL;
    --  DECLARATION OF UPDATECHILDPARENTEXIST CONSTRAINT FOR THE PARENT "SYSFACELIST4"
    CURSOR CPK2_SYSFACEJOIN3(VAR_AFJCID VARCHAR) IS
       SELECT 1
       FROM   SYSFACELIST4
       WHERE  SFLID = VAR_AFJCID
        AND   VAR_AFJCID IS NOT NULL;

BEGIN
  if nvl(fsyspara('data'),'N')='Y' then
     return;
  end if;
    SEQ := INTEGRITYPACKAGE.GETNESTLEVEL;
    --  PARENT "SYSFACELIST2" MUST EXIST WHEN UPDATING A CHILD IN "SYSFACEJOIN3"
    IF (:NEW.AFJPID IS NOT NULL) AND (SEQ = 0) THEN
       OPEN  CPK1_SYSFACEJOIN3(:NEW.AFJPID);
       FETCH CPK1_SYSFACEJOIN3 INTO DUMMY;
       FOUND := CPK1_SYSFACEJOIN3%FOUND;
       close CPK1_SYSFACEJOIN3;
       if not found then
          errno  := -20003;
          errmsg := 'PARENT DOES NOT EXIST IN "SYSFACELIST2". CANNOT UPDATE CHILD IN "SYSFACEJOIN3".';
          raise integrity_error;
       end if;
    end if;

    --  Parent "SYSFACELIST4" must exist when updating a child in "SYSFACEJOIN3"
    if (:new.AFJCID is not null) and (seq = 0) then
       open  CPK2_SYSFACEJOIN3(:new.AFJCID);
       fetch CPK2_SYSFACEJOIN3 into dummy;
       found := CPK2_SYSFACEJOIN3%FOUND;
       CLOSE CPK2_SYSFACEJOIN3;
       IF NOT FOUND THEN
          ERRNO  := -20003;
          ERRMSG := 'PARENT DOES NOT EXIST IN "SYSFACELIST4". CANNOT UPDATE CHILD IN "SYSFACEJOIN3".';
          RAISE INTEGRITY_ERROR;
       END IF;
    END IF;


--  ERRORS HANDLING
EXCEPTION
    WHEN INTEGRITY_ERROR THEN
       RAISE_APPLICATION_ERROR(ERRNO, ERRMSG);
END;
/

